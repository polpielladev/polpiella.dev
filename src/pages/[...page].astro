---
import BaseLayout from '@layouts/BaseLayout.astro'
import BlogPreview from '@components/BlogPreview'
import Paginator from '@components/Paginator'
import Subscribe from '@components/Subscribe'
import getPopularPosts from '@services/getPopularPosts'
import uniqBy from '@utils/uniqBy'

export async function getStaticPaths({ paginate }) {
  const posts = await Astro.glob('./*.md')
  const sortedPosts = posts.sort(
    (a, b) =>
      new Date(b.frontmatter.pubDate).valueOf() -
      new Date(a.frontmatter.pubDate).valueOf()
  )

  const categories = uniqBy(
    posts.flatMap((post) => post.frontmatter.tags),
    'slug'
  )

  const response = await getPopularPosts()

  const popularPosts = response.map((post) => {
    const fullPost = posts.find((p) => p.frontmatter.slug === post.slug)
    return { ...post, fullPost }
  })

  return paginate(sortedPosts, {
    pageSize: 5,
    props: { categories, popularPosts },
  })
}

const { page, categories, popularPosts } = Astro.props
const fullImageURL = `https://www.polpiella.dev/api/thumbnail?title=${encodeURI(
  'polpiella.dev'
)}`
---

<BaseLayout imageURL={fullImageURL}>
  <div class='flex mx-auto my-0 gap-1'>
    <div class='px-3 my-0 max-w-3xl flex flex-col gap-5'>
      <section
        class='flex flex-col gap-5 items-center text-center md:flex-row md:text-left'>
        <img class='object-cover m-0 w-20 h-20' src='/assets/profile.png' alt='Profile image showing Pol as a memoji in front of his laptop' />
        <div class='prose dark:prose-invert grid content-center'>
          <h2 class='m-0'>
            iOS Dev blog by <a
              class='font-bold underline decoration-amber-500 decoration-wavy hover:text-amber-700 dark:hover:text-amber-300'
              target='_blank'
              rel='noopener noreferrer'
              href='https://twitter.com/polpielladev'
              >Pol Piella
            </a>
          </h2>
          <p class='m-0'>iOS developer at <b>BBC iPlayer</b></p>
        </div>
      </section>

      <Paginator previousURL={page.url.prev} nextURL={page.url.next} />

      <section class='flex flex-col gap-8'>
        {page.data.map((post) => <BlogPreview post={post} />)}
      </section>

      <section class='prose dark:text-white text-black prose-a:text-gray-700 prose-a:no-underline dark:prose-invert dark:prose-a:text-gray-200 mt-4 lg:hidden aling-middle'>
        <form class="shadow-md flex flex-col gap-1 items-center max-w-sm mx-auto text-center border-2 p-6 dark:border-gray-500 border-gray-200 rounded-2xl" action="https://www.getrevue.co/profile/ios-ci-newsletter/add_subscriber" method="post" id="revue-form" name="revue-form"  target="_blank">
            <p class='m-0 text-xl font-bold'>Subscribe to the iOS CI Newsletter</p>
            <p class="m-0 text-sm max-w-[250px]">Subscribe to stay up-to-date with all things iOS CI!</p>
            <div class="mt-3">
              <Subscribe client:visible />
            </div>
        </form>
      </section>
    </div>
    <aside
      class='prose prose-a:text-gray-700 prose-a:no-underline dark:prose-invert dark:prose-a:text-gray-200 max-w-xs lg:flex lg:flex-col lg:gap-4 hidden'>
      <!-- Subscription box -->
      <section class='mb-4 border-gray-200'>
        <form class="flex flex-col gap-1" action="https://www.getrevue.co/profile/ios-ci-newsletter/add_subscriber" method="post" id="revue-form" name="revue-form"  target="_blank">
            <h1 class='m-0 text-2xl font-bold'>Subscribe to the iOS CI Newsletter</h1>
            <p class="m-0">Subscribe to stay up-to-date with all things iOS CI!</p>
            <Subscribe client:visible />
        </form>
      </section>
      <!-- Show top posts -->
      <section class='flex flex-col gap-3 mb-4'>
        <h1 class='m-0 text-2xl font-bold'>Most popular posts</h1>
        {popularPosts &&
          popularPosts.map((post, index) => {
            const icon = index === 0 ? 'ðŸ¥‡' : index === 1 ? 'ðŸ¥ˆ' : 'ðŸ¥‰'
            return (
              <a href={`/${post.slug}`}>
                <h4 class="m-0">{icon}</h4>
                <h4 class="m-0 hover:underline">{post.fullPost.frontmatter.title} </h4>
                <small>Viewed by {post.uniques} people ðŸ‘€</small>
              </a>
              <hr class='m-0' />
            )
          })}
      </section>
      <!-- Browse by category -->
      <section>
        <h1 class='mb-3 text-2xl font-bold'>Browse by topic</h1>
        <div class='flex flex-wrap gap-3'>
          {categories.map((category) => (
            <a
              href={`/category/${category.slug}`}
              class="rounded bg-gray-300 px-2  transition-colors hover:bg-slate-300 dark:bg-gray-700 dark:hover:bg-slate-800">
              {category.name}
